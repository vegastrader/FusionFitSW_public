{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "ng",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "serve",
            "args": ["serve"],
            "isBackground": true
        },
        {
            "taskName": "serve ssl",
            "args": ["serve", "--ssl", "true"],
            "isBackground": true
        },
        {
            "taskName": "build",
            "args": ["build"],
            "isBuildCommand": true
        }
    ]
}